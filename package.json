{
  "name": "skillbridge-backend",
  "version": "1.0.0",
  "type": "module",
  "main": "api/server.js",
  "engines": {
    "node": "20.x"
  },
  "scripts": {
    "dev": "npx tsx watch src/start.ts",
    "build": "prisma generate && tsup src --format esm --platform node --target node20 --outDir dist --no-treeshake",
    "prestart": "prisma generate",
    "start": "npm run build && node dist/server.js",
    "postinstall": "prisma generate"
  },
  "dependencies": {
    "@prisma/adapter-pg": "^7.4.0",
    "@prisma/client": "^7.4.0",
    "bcryptjs": "^3.0.3",
    "cookie-parser": "^1.4.7",
    "cors": "^2.8.6",
    "dotenv": "^17.3.1",
    "express": "^5.2.1",
    "jsonwebtoken": "^9.0.3",
    "nodemailer": "^7.0.13",
    "pg": "^8.17.2",
    "tsup": "^8.5.1"
  },
  "devDependencies": {
    "@types/cookie-parser": "^1.4.10",
    "@types/cors": "^2.8.19",
    "@types/express": "^5.0.6",
    "@types/jsonwebtoken": "^9.0.10",
    "@types/node": "^25.2.3",
    "prisma": "^7.4.0",
    "tsx": "^4.21.0",
    "typescript": "^5.9.3"
  }
}
