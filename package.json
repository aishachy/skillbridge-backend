{
  "name": "skillbridge-backend",
  "version": "1.0.0",
  "type": "module",
  "main": "api/server.js",
  "engines": {
    "node": "20.x"
  },
  "scripts": {
    "dev": "npx tsx watch src/server.ts",
    "seed:admin": "npx tsx src/scripts/seedAdmin.ts",
    "build": "prisma generate && npx tsup src/server.ts --format esm --platform node --target node20 --outDir api --external @prisma/client --dts",
    "start": "node api/server.js",
    "postinstall": "prisma generate"
  },
  "dependencies": {
    "@prisma/client": "^7.3.0",
    "express": "^5.2.1",
    "cookie-parser": "^1.4.7",
    "cors": "^2.8.6",
    "dotenv": "^17.2.3",
    "bcryptjs": "^3.0.3",
    "jsonwebtoken": "^9.0.3",
    "nodemailer": "^7.0.13",
    "pg": "^8.17.2"
  },
  "devDependencies": {
    "prisma": "^7.3.0",
    "tsup": "^8.5.1",
    "tsx": "^4.21.0",
    "typescript": "^5.9.3",
    "@types/node": "^25.0.10"
  }
}
