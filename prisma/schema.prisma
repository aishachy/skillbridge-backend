generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
}

model Users {
  id            Int            @id @default(autoincrement())
  name          String
  email         String         @unique
  password      String
  role          ROLE           @default(STUDENT)
  phone         String?
  isBanned      Boolean        @default(false)
  createdAt     DateTime       @default(now())
  updatedAt     DateTime       @updatedAt
  tutorProfiles TutorProfiles?
  bookings      Bookings[]
  reviews       Reviews[]
}

model TutorProfiles {
  id          Int      @id @default(autoincrement())
  bio         String?
  education   String?
  experience  String?
  perHourRate String?
  location    String?
  rating      Float?   @default(0)
  isActive    Boolean  @default(true)
  isFeatured  Boolean  @default(false)
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  userId              Int                 @unique
  user                Users               @relation(fields: [userId], references: [id])
  category            Categories[]        @relation("TutorCategories")
  reviews             Reviews[]
  bookings            Bookings[]
  tutorAvailabilities TutorAvailability[]
  tutorCategories     TutorCategories[]

  @@map("tutorProfiles")
}

model Categories {
  id          Int    @id @default(autoincrement())
  subjectName String
  description String

  tutors          TutorProfiles[]   @relation("TutorCategories")
  bookings        Bookings[]
  tutorCategories TutorCategories[]

  @@map("categories")
}

model TutorCategories {
  tutorId    Int
  categoryId Int

  tutor    TutorProfiles @relation(fields: [tutorId], references: [id])
  category Categories    @relation(fields: [categoryId], references: [id])

  @@id([tutorId, categoryId])
  @@map("tutor_categories")
}

model Bookings {
  id         Int      @id @default(autoincrement())
  studentId  Int
  tutorId    Int
  categoryId Int
  startTime  DateTime
  endTime    DateTime
  status     STATUS   @default(PENDING)
  price      Float?
  createdAt  DateTime @default(now())
  updatedAt  DateTime @updatedAt

  student             Users               @relation(fields: [studentId], references: [id])
  tutor               TutorProfiles       @relation(fields: [tutorId], references: [id])
  category            Categories          @relation(fields: [categoryId], references: [id])
  reviews             Reviews?
  tutorAvailabilities TutorAvailability[]
}

model Reviews {
  id        Int      @id @default(autoincrement())
  studentId Int
  tutorId   Int
  bookingId Int
  rating    String
  comment   String?
  createdAt DateTime @default(now())

  student Users         @relation(fields: [studentId], references: [id])
  tutor   TutorProfiles @relation(fields: [tutorId], references: [id])
  booking Bookings      @relation(fields: [bookingId], references: [id])

  @@unique([bookingId])
}

model TutorAvailability {
  id        Int                @id @default(autoincrement())
  tutorId   Int
  startTime DateTime
  endTime   DateTime
  status    AvailabilityStatus @default(AVAILABLE)
  createdAt DateTime           @default(now())
  updatedAt DateTime           @updatedAt

  tutor     TutorProfiles @relation(fields: [tutorId], references: [id])
  bookingId Int?
  booking   Bookings?     @relation(fields: [bookingId], references: [id])

  @@unique([tutorId, startTime, endTime])
}

enum AvailabilityStatus {
  AVAILABLE
  BOOKED
  BLOCKED
}

enum ROLE {
  STUDENT
  TUTOR
  ADMIN
}

enum STATUS {
  PENDING
  CONFIRMED
  COMPLETED
  CANCELLED
}
