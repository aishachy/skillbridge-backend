generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
}

model Users {
  id        Int            @id @default(autoincrement())
  name      String
  email     String         @unique
  password  String
  role      ROLE           @default(STUDENT)
  phone     String?
  createdAt DateTime       @default(now())
  updatedAt DateTime       @updatedAt
  isBanned  Boolean        @default(false)
  bookings  Bookings[]
  reviews   Reviews[]
  tutor     TutorProfiles?
}

model TutorProfiles {
  id                  Int                 @id @default(autoincrement())
  bio                 String?
  education           String?
  experience          String?
  perHourRate         String?
  location            String?
  rating              Float?              @default(0)
  isActive            Boolean             @default(true)
  isFeatured          Boolean             @default(false)
  createdAt           DateTime            @default(now())
  updatedAt           DateTime            @updatedAt
  userId              Int                 @unique
  bookings            Bookings[]
  reviews             Reviews[]
  tutorAvailabilities TutorAvailability[]
  user                Users               @relation(fields: [userId], references: [id])
  tutorCategories     TutorCategories[]
  categories          Categories[]        @relation("TutorCategories")

  @@map("tutorProfiles")
}

model Categories {
  id              Int               @id @default(autoincrement())
  subjectName     String
  description     String
  bookings        Bookings[]
  tutorCategories TutorCategories[]
  tutorProfiles   TutorProfiles[]   @relation("TutorCategories")

  @@map("categories")
}

model TutorCategories {
  tutorId    Int
  categoryId Int
  category   Categories    @relation(fields: [categoryId], references: [id])
  tutor      TutorProfiles @relation(fields: [tutorId], references: [id])

  @@id([tutorId, categoryId])
  @@map("tutor_categories")
}

model Bookings {
  id                Int                 @id @default(autoincrement())
  categoryId        Int
  startTime         DateTime
  endTime           DateTime
  price             Float?
  createdAt         DateTime            @default(now())
  updatedAt         DateTime            @updatedAt
  status            STATUS              @default(PENDING)
  studentId         Int
  tutorId           Int
  category          Categories          @relation(fields: [categoryId], references: [id])
  student           Users               @relation(fields: [studentId], references: [id])
  tutor             TutorProfiles       @relation(fields: [tutorId], references: [id])
  reviews           Reviews?
  TutorAvailability TutorAvailability[]
}

model Reviews {
  id        Int           @id @default(autoincrement())
  rating    String
  comment   String?
  createdAt DateTime      @default(now())
  studentId Int
  tutorId   Int
  bookingId Int           @unique
  booking   Bookings      @relation(fields: [bookingId], references: [id])
  student   Users         @relation(fields: [studentId], references: [id])
  tutor     TutorProfiles @relation(fields: [tutorId], references: [id])
}

model TutorAvailability {
  id        Int                @id @default(autoincrement())
  startTime DateTime
  endTime   DateTime
  tutorId   Int
  bookingId Int?
  createdAt DateTime           @default(now())
  status    AvailabilityStatus @default(AVAILABLE)
  updatedAt DateTime           @updatedAt
  Bookings  Bookings?          @relation(fields: [bookingId], references: [id])
  tutor     TutorProfiles      @relation(fields: [tutorId], references: [id])

  @@unique([tutorId, startTime, endTime])
}

model playing_with_neon {
  id    Int    @id @default(autoincrement())
  name  String
  value Float? @db.Real
}

enum AvailabilityStatus {
  AVAILABLE
  BOOKED
  BLOCKED
}

enum ROLE {
  STUDENT
  TUTOR
  ADMIN
}

enum STATUS {
  PENDING
  CONFIRMED
  COMPLETED
  CANCELLED
}
